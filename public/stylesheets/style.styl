body
  font: normal 100% "Lucida Grande", Helvetica, Arial, sans-serif
  background-image: url('../images/bg.jpg')
  background-size: cover;
a
  color: #00B7FF

h1
  font-size: 1.5em
  font-weight: bold
  background-color: black
  color: #DCDBD9

#page
  width: 100%
  margin: 0 auto
  text-align: center
  
.status
  background-color: #00B7FF
  color: white
  font-weight: bold
  text-transform: capitalize
  display: inline-block
  padding: 0.3em
  margin: 0.3em
  border: 0.08em solid white

#venue
  img
    background-clip: padding-box
    max-width: 100%
    min-width: 60%
  width: 100%
  height: 34%
  margin: 0
  a
    text-decoration: none

#details
  width: 100%
  margin: 0.3em auto
  background: rgba(112, 112, 112, 0.7)
  color: #ddd
  .title
    font-weight: bold
  table
    width: 100%
  table tr td
    padding: 0.5em
    vertical-align: middle
    img
      width: 2em
      height: 2em