body
  font: normal 100% "Lucida Grande", Helvetica, Arial, sans-serif
  background-image: url('../images/bg.jpg')
  background-size: cover;
a
  color: #444

h1
  font-family: 'Permanent Marker', cursive
  font-size: 1.8em
  background-color: black
  background: -webkit-gradient(linear, left top, left bottom, from(#000), to(#444))
  color: white
  padding-left: 0.25em
  margin-bottom: 0.1em

#page
  width: 100%
  margin: 0 auto
  text-align: center
  
.status
  background-color: #C44
  color: white
  font-weight: bold
  text-transform: capitalize
  display: inline-block
  padding: 0.3em
  margin: 0.3em
  border: 0.08em solid #F77

#venue
  display: none
  width: 100%
  height: 30%
  margin: 0
  background-color: white
  font-weight: bold
  a
    text-decoration: none
    display: inline-block

#details
  display: none
  width: 100%
  margin: 0.3em auto
  background: rgba(112, 112, 112, 0.7)
  color: #ddd
  .title
    font-weight: bold
  table
    width: 100%
  table tr td
    padding: 0.5em
    vertical-align: middle
    img
      width: 2em
      height: 2em
      vertical-align: middle
      margin: 0 0.5em

#social
  margin-top: 0.3em
  p a
    display: inline-block
    width: 50%
    text-decoration: none
    color: white
    padding: 0.5em 0
    font-weight: bold
  p .facebook
    background-color: rgb(43, 66, 134)
    background: -webkit-gradient(linear, left top, left bottom, from(rgba(43, 66, 134, 0.7)), to(rgba(53, 81, 151, 0.7)))
  p .twitter
    background-color: rgb(113, 215, 231)
    background: -webkit-gradient(linear, left top, left bottom, from(rgba(93, 209, 227, 0.7)), to(rgba(137, 221, 225, 0.7)))