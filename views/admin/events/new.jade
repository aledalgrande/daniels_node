div#main
	form(action='/admin/events', method='post')
		p
			label Event Facebook Id
			br
			input(type='text', name='event[fbId]', value=event.fbId, id='event_fbId')
		p
			label Title
			br
			input(type='text', name='event[title]', value=event.title, id='event_title')
		p
			label Start Time
			br
			input(type='text', name='event[start]', value=event.start, id='event_start')
		p
			label End Time
			br
			input(type='text', name='event[end]', value=event.end, id='event_end')
		p
			input(type='hidden', name='venue[longitude]', value='', id='venue_longitudine')
			input(type='hidden', name='venue[latitude]', value='', id='venue_latitude')
			input(type='hidden', name='venue[fbId]', value='', id='venue_fbId')
			input(type='hidden', name='venue[name]', value='', id='venue_name')
		a(href='#', id='populate')
			| populate
		input(type='submit', value='Save')
script
	$(document).ready(function() {
		$('#populate').click(function(e){
			e.preventDefault();
			var eventId = $('#event_fbId').val();
			$.getJSON('https://graph.facebook.com/' + eventId, function(event){
				$('#event_title').val(event['name']);
				$('#event_start').val(event['start_time']);
				$('#event_end').val(event['end_time']);
				$('#venue_name').val(event['location']);
				$('#venue_longitudine').val(event['venue']['longitude']);
				$('#venue_latitude').val(event['venue']['latitude']);
				$('#venue_fbId').val(event['venue']['id']);
			});
		});
	});